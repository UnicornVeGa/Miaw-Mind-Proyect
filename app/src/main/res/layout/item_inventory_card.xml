<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"

    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:background="@color/basic_gray"
            app:layout_constraintBottom_toTopOf="@id/tvItemName"
            android:src="@drawable/ic_missing_image"/>

        <TextView
            android:id="@+id/tvItemCount"
            android:text="@string/min_number_products"
            android:paddingStart="7dp"
            android:paddingEnd="12dp"
            android:paddingVertical="4dp"
            android:background="@color/white"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/ivProductImage"
            app:layout_constraintStart_toStartOf="@id/ivProductImage"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/tvItemName"
            android:text="@string/product_name"
            android:layout_marginBottom="15dp"
            android:gravity="start"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
